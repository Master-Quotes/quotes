.button-group
	display grid
	grid-template-columns repeat(auto-fit, minmax(50%, 1fr))
	grid-gap 4px
	//margin-top 2rem
	&.no-margin
		margin 0
	&.form
		margin-top 0
		justify-content flex-start
	button, a
		box-sizing border-box
		text-align center
	button
		width 100%
	a
		text-decoration none
		color white
		width 100%
		&.outline
			border 4px solid error
			border-radius 4px
			background-color white
			color error
			font-size 1.25rem
			padding .5rem
			&:hover
				border-color darken(error, 25%)
				background-color darken(error, 25%)


button, &.button
	background-color shade
	color white
	&:hover
		background-color #808080
		border-color #808080
	&:focus
		background-color tertiary
		border 4px solid tertiary
		//border-radius radius
		outline 0
	&.button-clear
		&:focus
			background-color red
			border-color red
	&.success
		background-color success
		border-color success