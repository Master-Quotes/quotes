.button-group
	display flex
	align-items center
	justify-content center
	margin-top 2rem
	&.no-margin
		margin 0
	&.form
		margin-top 0
		justify-content flex-start
	a
		text-decoration none
		color white
		&.outline
			border 4px solid transparent
			color red
			font-size 1.25rem
			margin-bottom 8px
			padding .5rem


button, &.button
	background-color primary
	color white
	&:hover
		background-color #808080
		border-color #808080
	&:focus
		background-color green
		border 4px solid green
		border-radius 0
		color #fff
		outline 0
	&.button-clear
		&:focus
			background-color red
			border-color red